

@import "Normalize.css"

$green = #008b77;
$darkGreen = #005530
$blue = #006574
$darkBlue = #002874;
$lightGrey = #b8b8b8
$darkGrey = #a0a0a0
	
separator(orientation,size)
	$gradient
	display: block;
	if orientation == horizontal
		height: 3px;
		width: size
		$gradient = to right
	else if orientation == vertical
		height: size
		width: 3px
		$gradient = to bottom
	else
		error("Invalid orientation")
	
	background: linear-gradient($gradient, rgba(0,0,0,0) 1%, #b4b4b4 3%, #B4B4B4 96%, rgba(0,0,0,0) 99% );

underline(color) 
	&:after
		content: ""
		position: absolute
		left: -5%
		bottom: -3px
		background: linear-gradient(to bottom, color 0%,rgba(255,255,255,0) 100%)
		width: 110%
		height: 4px
		border-bottom-right-radius: 30px
		border-bottom-left-radius: 30px


body
	background-color: #F1F1F1 !important
	width: 80vw
	margin: auto !important
		
	header
		margin: auto
		width: 60vw
		margin-bottom: 70px;
		h1
			position: relative;
			top: 20px;
			img
				margin: auto;
				display: block;
			a
				font-family: 'Shadows Into Light', cursive;
				color:  $green
				&:hover
					color: @color
				p
					text-shadow: 1px 1px 0px #008b77;
					width: 100%;
					text-align: center;
					position: absolute;
					top: 141px;
					text-transform: uppercase;
					span
						font-size: 24px;
						opacity: 0.5;
						text-transform: none;
						text-shadow: 0.5px 0.5px 0 #008b77;
						position: absolute;
						bottom: -20px;
						right: 180px;
	
	nav
		width: 80vw;
		margin: auto;
		font-family: 'Montserrat', sans-serif;
		a, #store
			display: inline-block;
			width: 150px;
			height: 30px;
			text-align: center;
			color: $darkBlue;
			font-size: 18px;
			&:hover
				background: radial-gradient(ellipse at bottom, rgba(0,101,116,0.65) 2%,rgba(0,85,97,0.65) 20%,rgba(0,0,0,0) 66%)
				color: $darkBlue
				text-decoration: none
			.submenu
				background:linear-gradient(rgba(0,101,116,0.7) 80%, rgba(0,0,0,0)) ;
				display: block;
				height: 0px;
				overflow-y: hidden;
				margin-bottom: -11px;
				width: 170%;
				font-size: 14px;
				a
					display: block;
					width: 100%;
					text-align: center;
					color: #ffffff;
					background: none
					padding: 5px
					height:auto
					margin: auto
				a:first-child
					border-bottom: 1px solid rgba(255, 255, 255, .4)
					width: 90%
					
		#store:hover
			position: relative;
			>.submenu
				position: absolute;
				height: 100px;
				top: 32px;
				transition: height 1s;
		#store:not(:hover)
			position:relative
			>.submenu
				position: absolute
				height: 0px
				transition: height 1s
			>.submenu:hover
				height: 100px
				
					
		.c-border-bottom
			separator(horizontal, 80vw)
	
	form
		select,input
			border: none
			border-bottom 1px solid $lightGrey
			color: $darkGrey
			width: 60%
			background: transparent
		::placeholder
			color: $darkGrey !important
			
			option
				color: $darkGrey
		
		textarea
			width: 100%
			height: 100px
					
			
			
	.content
		height: 100vw
		position: relative
		
		h3
			text-align: center
			color: $blue
			margin-bottom: 20px
		
		.button
			background-color: $blue !important
			border: 1px solid $darkGreen !important
			color: white !important
			margin-left: 70%
			width:20% !important
		
		.admin-nav
			a
				width:19%
					
		.add
			height: 550px
			margin-bottom : 50px
	
			.book,.sep-vertical,.event
				display: inline-block
				margin-top: 50px
				position: absolute
			
			.book,.event
				width: 49%
				h3
					margin-bottom: 20px
					
				label
					width: 30%
					
				fieldset
					display: none
					
				fieldset:first-of-type
					display: block
			
			.event
				right: 0
		
		.sep-vertical
			separator(vertical, 550px)
			right: 50%
			display: inline-block
		
		.donation, .orders, .users
			width: 100%
			margin-bottom: 50px
			table
				width: 80%
				margin: auto
				tr 	
					border-bottom: 1px solid rgba($lightGrey, 0.3)
					th,td 
						border-left: 1px solid $lightGrey
						padding-left: 5px
						&:first-of-type
							border-left: transparent
				
			a
				float: right
				margin-right: 100px
				
		.slider
			background-color: $blue
			width: 70%
			height: 350px
			float: left
			position: relative
			h3
				z-index:100
				color: white
				float: right
				margin-right: 10px
				position: relative
				underline(white)
				&::after
					width:115%
					
			.img
				
				overflow: hidden
				width: 100%
				height: 100%
				position: absolute
				margin: auto
				img
					display: block
					width: 90%
					margin: auto
					margin-top: -28%
			.actu
				width: 90%
				height: 20%
				position: absolute
				bottom: 0
				right: 0
				z-index: 100
				background: linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 21%,rgba(0,0,0,0.65) 30%,rgba(0,0,0,0.65) 100%)
				color: white
				h4, p
					margin-left 20px
					
			button
				z-index:100;
				width:40px
				height: 40px
				background: transparent
				border: none
				position: absolute
				top: 50%
				transform: translateY(-50%)
				color: white
				font-size: 20px
				border-radius: 100PX
				opacity: 0.2
				text-align: center
				&:hover
					opacity: 1
					transition: opacity 0.5s, color 0.5s
				i
					margin: auto
			
			.slider-left
				left: 10px
				
			.slider-right
				right: 10px
				
		.slider, .news
			display: inline-block
			margin-top: 20px
		
		.news
			width: 28%
			float: right
			
			h3
				span
					position: relative
					underline($blue)
			
		.h-350
			height: 390px;
			margin-left: 10px
			
		#presentation, #freeEdit
			margin-top:50px
			h3
				text-align: left
				margin-left: 5%
				span
					position: relative
					underline($blue)
	footer
		background-color: #00395d
		height: 50px
		width: 100vw
		margin-bottom: 0

		a, p 
			line-height : 50px
			display: inline-block
			color: white
		p 
			margin-left: 30px
		a:first-of-type
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
			font-size: 24px
			color: white
			
		a:last-child
			float: right
			margin-right: 30px
			text-decoration: underline
			&:hover
				color: #c7c7c7
				